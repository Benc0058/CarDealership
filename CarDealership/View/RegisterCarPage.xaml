<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarDealership.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interfaces="using:CarDealership.Interfaces"
    xmlns:ViewModel="using:CarDealership.ViewModel"
    xmlns:controls="using:MyToolkit.Controls"
    xmlns:interop="using:Windows.UI.Xaml.Interop"
    x:Class="CarDealership.View.RegisterCarPage"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <SplitView x:Name="MySplitView" DisplayMode="CompactOverlay"  IsPaneOpen="False" 
			CompactPaneLength="50" OpenPaneLength="150">
            <SplitView.DataContext>
                <ViewModel:NavigationViewModel/>
            </SplitView.DataContext>
            <!--The pane represents the menu that you want to be able to interact with, and the content represents the main content of your page.-->
            <!--SplitviewPane-Begin-->
            <SplitView.Pane>
                <StackPanel Background="Silver">
                    <StackPanel Orientation="Horizontal" Background="#32BEA6">
                        <Button x:Name="HamburgerButton" 
                            FontFamily="Segoe MDL2 Assets" 
                            Content="&#xE700;"
						    Width="50" 
                            Height="50" 
                            Background="Transparent" 
                            Click="HamburgerButton_Click"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                            <Button x:Name="Car" 
							FontFamily="Segoe MDL2 Assets" 
							Content="&#xEC47;"
							Width="50" 
							Height="50" 
							Background="Transparent"
							Command="{Binding NavigateToCarCommand}"/>
                        <TextBlock Text="Cars" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="Customer" 
                                FontFamily="Segoe MDL2 Assets" 
                                Content="&#xE8D4;"
							    Width="50" 
                                Height="50" 
                                Background="Transparent"
                                Command="{Binding NavigateToCustomer}"/>
                        <TextBlock Text="Customers" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="LogOut" 
                                FontFamily="Segoe MDL2 Assets" 
                                Content="&#xE72B;"
							    Width="50" 
                                Height="50" 
                                Background="Transparent"
                                Command="{Binding LogOutCommand}"/>
                        <TextBlock Text="Log Out" FontSize="18" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </SplitView.Pane>
            <!--SplitViewPane - End-->

            <!--SplitviewContent - Begin-->
            <SplitView.Content>
                <Grid>
                    <Grid.DataContext>
                        <ViewModel:RegisterCarViewModel/>
                    </Grid.DataContext>

                    <!--DataGrid-->
                    <StackPanel  BorderThickness="3,3,3,3" BorderBrush="WhiteSmoke" Width="600" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <controls:DataGrid ItemsSource="{Binding CarCollection}" x:Name="DataGrid" HorizontalAlignment="Center"
                   SelectionMode="Single" SelectedItem="{Binding SelectedCar, Mode=TwoWay}" DefaultOrderIndex="1" Height="380" Width="600" Margin="0,0,-3,0" controls:DataGridExtensions.UseSingleSelectionAndDeselection="true">
                            <!--Here u can put the header-->
                            <controls:DataGrid.Columns>
                                <controls:DataGridTextColumn Width="200" Header="ID" 
                  Binding="{Binding ID}"/>
                                <controls:DataGridTextColumn Width="200" Binding="{Binding Brand}" 
                  IsAscendingDefault="False">
                                    <controls:DataGridTextColumn.Header>
                                        <TextBlock Text="Brand" Foreground="Green" />
                                    </controls:DataGridTextColumn.Header>
                                </controls:DataGridTextColumn>
                                <controls:DataGridTextColumn Width="200" Header="Name" 
                  Binding="{Binding Name}" />
                            </controls:DataGrid.Columns>

                            <controls:DataGrid.ItemDetailsTemplate>
                                <DataTemplate>
                                    <!--Here u can put the Details if u want-->
                                    <Grid Margin="10,10,10,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel HorizontalAlignment="Left" Grid.Column="0">
                                            <TextBlock Text="Details: " FontWeight="Bold" FontSize="15"/>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Color:" Width="50"/>
                                                <TextBlock Text="{Binding Color}" Width="100"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Year:" Width="50"/>
                                                <TextBlock Text="{Binding Year}" Width="100" />
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Price:" Width="80"/>
                                                <TextBlock Text="{Binding Price}" Width="200"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Comment:" Width="80"/>
                                                <TextBlock Text="{Binding Comment}" Width="200"/>
                                            </StackPanel>
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Right" Grid.Column="1">
                                            <Image Source="{Binding ImagePath}" Width="100" Height="100"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </controls:DataGrid.ItemDetailsTemplate>
                        </controls:DataGrid>

                        <!--Inputs-Begin-->
                        <StackPanel>
                            <StackPanel Height="45" Orientation="Horizontal" Margin="7,0" HorizontalAlignment="Center">
                                <StackPanel VerticalAlignment="Center" Width="160">
                                    <TextBox Text="{Binding Brand, Mode=TwoWay}" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" PlaceholderText="Brand"/>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center" Width="160">
                                    <TextBox Text="{Binding Name, Mode=TwoWay}" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" PlaceholderText="Name"/>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center" Width="160">
                                    <TextBox Text="{Binding Year, Mode=TwoWay}" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Right" PlaceholderText="Year" Margin="0,7,0,6"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Height="45" Orientation="Horizontal" Margin="7,0" HorizontalAlignment="Center">
                                <StackPanel VerticalAlignment="Center" Width="160">
                                    <TextBox Text="{Binding Color, Mode=TwoWay}" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" PlaceholderText="Color"/>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center" Width="160">
                                    <TextBox Text="{Binding Price, Mode=TwoWay}" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" PlaceholderText="Price"/>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center" Width="160">
                                    <TextBox Text="{Binding Comment, Mode=TwoWay}" Width="150" Height="30" VerticalAlignment="Center" HorizontalAlignment="Center" PlaceholderText="Comment"/>
                                </StackPanel>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBox Text="{Binding ImagePath, Mode=TwoWay}" Width="100" Height="30" VerticalAlignment="Center" HorizontalAlignment="Left" PlaceholderText="Image" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <!--Inputs-End-->
                    <!--DataGrid-End-->

                    <!--<HyperlinkButton Content="" HorizontalAlignment="Left" Margin="1056,257,0,0" VerticalAlignment="Top"/>-->

                    <!--AppBar-Begin-->
                        <StackPanel Orientation="Horizontal" Margin="315,0,0,40" Height="50" HorizontalAlignment="Left" VerticalAlignment="Bottom">
                        <AppBarButton Icon = "Add" Command="{Binding AddCar}"/>
                        <AppBarSeparator/>
                        <AppBarButton Icon = "Delete" Command="{Binding DeleteCar}"/>
                        <AppBarSeparator/>
                        <AppBarButton Icon = "Shop" Command="{Binding CreateInvoiceWithSelectedCar}"/>
                    </StackPanel>
                    <!--AppBar-End-->

                    <!--FilterCar-Begin-->
                    <StackPanel HorizontalAlignment="Center" Height="90" Width="600" Margin="317,11,313,0" VerticalAlignment="Top" Orientation="Horizontal">
                        <TextBox PlaceholderText="Find Car" Width="600" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Text="{Binding searchforcar, Mode=TwoWay}" Margin="0,0,0,2"/>
                        <!--<Button x:Name="Search" Content="Search" HorizontalAlignment="Stretch" Command="{Binding searchCar}" VerticalAlignment="Top" Height="32" Width="100" Background="#32BEA6"/>-->
                    </StackPanel>
                    <!--FilterCar-End-->

                </Grid>
            </SplitView.Content>
            <!--SplitviewContent-End-->
        </SplitView>
    </Grid>
</Page>
