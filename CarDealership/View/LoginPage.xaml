<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarDealership.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:CarDealership.ViewModel"
    x:Class="CarDealership.View.LoginPage"
    mc:Ignorable="d">

    <Page.DataContext>
        <ViewModel:LoginViewModel/>
    </Page.DataContext>

    <Grid Background="White">
        <Image Source="../Assets/icon_car.png"
               Width="200"
               Height="200"
               HorizontalAlignment="Center"
               Margin="0,0,0,250"/>

        <TextBox x:Name="Username"
			PlaceholderText="Username"
			Width="250"
			Height="30"
			HorizontalAlignment="Center"
			Text="{Binding CurrentUser.UserName, Mode=TwoWay}"/>

        <PasswordBox x:Name="Password"
			PlaceholderText="Password"
			Width="250"
			Height="30"
			HorizontalAlignment="Center"
			Margin="0,100,0,0"
			Password="{Binding CurrentUser.Password, Mode=TwoWay}"/>

        <Button x:Name="Login"
			Content="Log In"
			Width="100"
			Height="30"
			HorizontalAlignment="Center"
			Margin="0,200,0,0"
			Command="{Binding LoginCommand}"/>


    </Grid>
</Page>
